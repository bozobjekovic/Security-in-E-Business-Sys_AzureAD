
<a href="#" class="btn btn-danger btn-sm btn-block no_border" style="background-color: #428bca; border-color: #428bca;" data-toggle="modal" data-target="#addNewsModal" role="button">Add News</a>

<!--Compose Modal -->
<div class="modal fade" id="addNewsModal" role="dialog" style="text-align: initial;">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content no_border" style="border-radius: 0px;">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h4 class="modal-title">Add New News</h4>
            </div>
            <div class="modal-body">
                <form id="addNewsForm" role="form" class="form-horizontal" action="/Home/AddNews" method="post">
                    <div class="form-group">
                        <label class="col-sm-2" for="inputTo" style="margin-top: 7px;">Title</label>
                        <div class="col-sm-10"><input type="text" name="Title" class="form-control no_border no_max_width" id="inputTo" multiple placeholder="News title" /></div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2" for="inputSubject" style="margin-top: 7px;">Image</label>
                        <div class="col-sm-10">
                            <select name="ImageOption" style="display: inline-block; width: 128px; border-radius: 0px; height: 34px;">
                                <option value="default">Default image</option>
                                <option value="empty">Without image</option>
                                <option value="custom">Custom image</option>
                            </select>
                            <input type="file" name="Subject" class="form-control no_border no_max_width" id="inputSubject" style="display: inline-block; width: 70%;"/>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-12" for="inputBody">Content</label>
                        <div class="col-sm-12"><textarea name="Content" class="form-control no_border no_max_width" id="inputBody" rows="10"></textarea></div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default pull-left no_border" data-dismiss="modal">Cancel</button>
                <button type="submit" form="addNewsForm" class="btn btn-danger no_border">Create</button>
            </div>
        </div>

    </div>
</div>

