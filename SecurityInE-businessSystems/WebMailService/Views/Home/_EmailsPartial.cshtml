@model ICollection<WebMailService.Model.Email>

<div class="col-sm-9 col-md-10">
    <div class="tab-pane fade in active" id="home">
        <div class="list-group">
            @foreach (var email in Model)
            {
                <a href="#" class="@( email.IsRead ? "list-group-item read" : "list-group-item")">
                    <div class="checkbox">
                        <label>
                            <input type="checkbox">
                        </label>
                    </div>
                    <span class="name" style="min-width: 120px; display: inline-block;">Bhaumik Patel</span> <span class="">@email.Subject</span>
                    <span class="text-muted" style="font-size: 11px;">@email.Message</span><span class="badge">@email.Date.ToString("dd/MMM/yy hh:mm tt")</span>
                </a>
            }
        </div>
    </div>
</div>
